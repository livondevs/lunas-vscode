{
  "name": "lunas",
  "displayName": "Lunas",
  "description": "VSCode Extension for Lunas",
  "version": "0.0.1-beta.1",
  "publisher": "lunasdev",
  "engines": {
    "vscode": "^1.78.0"
  },
  "scripts": {
    "package": "tsc && vsce package"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onLanguage:lunas",
    "onCommand:lunas.format"
  ],
  "contributes": {
    "configurationDefaults": {
      "[lunas]": {
        "editor.defaultFormatter": "lunasdev.lunas"
      }
    },
    "commands": [
      {
        "command": "lunas.format",
        "title": "Format Lunas Code"
      }
    ],
    "languages": [
      {
        "id": "lunas",
        "aliases": [
          "Lunas",
          "lunas"
        ],
        "extensions": [
          ".lun"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "blh"
      }
    ],
    "grammars": [
      {
        "language": "lunas",
        "scopeName": "source.lunas",
        "path": "./syntaxes/lunas.tmLanguage.json"
      },
      {
        "language": "blh",
        "scopeName": "text.html.lunas",
        "path": "./syntaxes/text.html.lunas.tmLanguage.json"
      }
    ],
    "documentFormatting": [
      {
        "language": "lunas"
      }
    ]
  },
  "dependencies": {
    "lunas-formatter": "^0.0.1-beta.2",
    "typescript": "^5.7.3",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  },
  "devDependencies": {
    "@types/node": "^22.13.1",
    "vscode": "^1.1.37"
  }
}
